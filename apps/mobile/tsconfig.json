{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react-native"
  },
  "ts-node": {
    "compilerOptions": {
      "moduleResolution": "node"
    }
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "metro.config.js"
  ],
  "exclude": ["node_modules"]
}
